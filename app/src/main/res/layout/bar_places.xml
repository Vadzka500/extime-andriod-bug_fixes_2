<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:orientation="horizontal"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/geoPlacesBlock"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical|start"
            android:src="@drawable/icn_geo"/>

        <TextView
            android:layout_marginStart="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_gravity="center_vertical|end"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/gray"
            android:text="(100)"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/sortElements"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:src="@drawable/icn_sort_za"/>

        </FrameLayout>

        <android.support.v4.widget.Space
            android:layout_width="6dp"
            android:layout_height="0dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/icn_sort_pulse"/>

        </FrameLayout>

        <android.support.v4.widget.Space
            android:layout_width="4dp"
            android:layout_height="0dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:src="@drawable/icn_sort_clock"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/placesList"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginLeft="6dp"
            android:textSize="14dp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#567bac"
            android:lineSpacingExtra="10sp"
            android:text="@string/list"/>

        <TextView
            android:id="@+id/placesMap"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="30dp"
            android:textSize="14dp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#567bac"
            android:lineSpacingExtra="10sp"
            android:text="@string/map"
            />

    </LinearLayout>


</FrameLayout>