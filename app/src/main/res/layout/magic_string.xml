<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/magic_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="57dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="0dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="11dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="11dp"
            android:src="@drawable/icn_ms_console" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/magic_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif-light"
                android:hint="@string/ms_hint"
                android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
                android:maxLines="3"
                android:textColor="@android:color/black"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/ms_cursor"
                android:textSize="14dp"
                android:textStyle="normal"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:paddingRight="25dp"
                android:backgroundTint="@color/colorPrimaryDark"/>

            <ImageView
                android:id="@+id/text_reset_btn"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical|end"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:scaleType="fitCenter"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/icn_ms_close"
                android:visibility="gone" />


        </FrameLayout>

        <ImageView
            android:id="@+id/magicIconHashtag"
            android:layout_width="41dp"
            android:layout_height="47dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:foregroundGravity="left"
            android:paddingBottom="11dp"
            android:paddingRight="1dp"
            android:paddingTop="11dp"
            android:src="@drawable/hashtag_n2" />

        <FrameLayout
            android:id="@+id/clipboardPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView

            android:layout_width="42dp"
            android:layout_height="47dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:foregroundGravity="left"
            android:paddingBottom="12dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:src="@drawable/icn_ms_clipboard" />

        <ImageView
            android:id="@+id/circle_new_clip"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="11dp"
            android:visibility="gone"
            android:tint="@color/icon_orange"
            android:src="@drawable/circle_clipboard"/>

        </FrameLayout>

        <ImageView
            android:id="@+id/search_magic_icon"
            android:layout_width="40dp"
            android:layout_height="47dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="4dp"
            android:paddingRight="13dp"
            android:paddingTop="12dp"
            android:src="@drawable/icn_ms_search"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/plane_icon"
            android:layout_width="40dp"
            android:layout_height="47dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="4dp"
            android:paddingRight="13dp"
            android:paddingTop="12dp"
            android:src="@drawable/icn_ms_plane"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>