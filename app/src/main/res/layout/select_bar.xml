<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:orientation="horizontal"
    android:background="#F5F5F5">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sortPopupLine"
        android:layout_gravity="top"/>

    <TextView
        android:id="@+id/typeHash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AND"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="17dp"/>

    <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"

       android:layout_gravity="center_vertical|center_horizontal">

       <TextView
           android:id="@+id/quantity_selected_contacts"
           android:paddingStart="16dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="1"
           android:maxEms="20"
           android:singleLine="true"
           android:textSize="11dp"/>

       <TextView
           android:id="@+id/contactsText"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:text="@string/cont_sel"
           android:textSize="11dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end">


        <ImageView
            android:id="@+id/docButton"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginEnd="18dp"
            android:visibility="gone"
            android:src="@drawable/icn_btn" />

        <ImageView
            android:id="@+id/exportButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginEnd="15dp"
            android:src="@drawable/icn_export"
            android:visibility="gone"
            android:tint="@color/gray" />

        <ImageView
            android:id="@+id/stop_selection_mode"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="7dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="8dp"
            android:src="@drawable/icn_close" />

    </LinearLayout>

</FrameLayout>