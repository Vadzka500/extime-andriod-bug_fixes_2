<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="222dp"

    android:layout_height="30dp">

    <LinearLayout
        android:id="@+id/hyperHashTag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"

        android:layout_weight="1">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"

        >

        <TextView
            android:id="@+id/hashtag_edit_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="1.5sp"
            android:layout_weight="1"
            android:text="tag"
            android:layout_alignParentStart="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginStart="3dp"
            android:layout_gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/hash_pin"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="5dp"
                android:tint="@color/primary"
                android:src="@drawable/pin_top"/>

            <ImageView
                android:id="@+id/hash_bind"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="5dp"
                android:tint="@color/primary"
                android:src="@drawable/megaphone"/>

        </LinearLayout>






    </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/quantityHashTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:fontFamily="sans-serif"
                android:text="(12)"
                android:textColor="@color/gray"
                android:textSize="14dp"
                android:textStyle="normal" />

            <CheckBox
                android:id="@+id/hashtag_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:checked="true"
                style="@style/CheckBoxStyleSmall"/>

        </LinearLayout>

</LinearLayout>