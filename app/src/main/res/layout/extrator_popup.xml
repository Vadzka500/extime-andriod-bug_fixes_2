<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/popup_background"
    android:id="@+id/popupContainerExtract"
    android:layout_height="200dp"
    android:layout_margin="3dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:tint="@color/orange"
                android:layout_gravity="center_vertical"
                android:src="@drawable/folder_extract"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:text="Extractor"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="9dp"/>

            <TextView
                android:id="@+id/textCountFoundExtrator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="1dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:layout_marginStart="16dp"
                android:textColor="@color/gray"
                android:text="@string/_1_exesting_3_fields_selected"/>

        </LinearLayout>

        <ImageView
            android:scaleY="1.1"
            android:scaleX="1.1"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_height="match_parent"
            android:src="@drawable/new_icon"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="2dp"
        android:background="@color/sortPopupLine" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/clipboardRVExtract"
        android:layout_width="320dp"
        android:layout_height="135dp"
        android:layout_marginTop="6dp"
        android:overScrollMode="never">

    </android.support.v7.widget.RecyclerView>




</LinearLayout>