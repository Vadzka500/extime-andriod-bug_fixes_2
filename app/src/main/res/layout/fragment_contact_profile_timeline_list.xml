<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp">

    <FrameLayout
        android:id="@+id/closerTimeline"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/joinContact"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/type_image"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_marginStart="0dp"

            android:layout_marginTop="10dp"
            android:src="@drawable/new_icon" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:minHeight="46dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hashtag_text"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_gravity="top"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:text="joined"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/carrier"
                    android:layout_width="match_parent"
                    android:layout_height="13dp"
                    android:layout_gravity="top"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:text="(MTN)"
                    android:textSize="10dp"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/checkConf"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" />
            </LinearLayout>


            <TextView
                android:id="@+id/value1"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:text="8(921)649-64-90"
                android:textColor="@color/black"

                android:textSize="14dp"
                android:textStyle="normal" />

        </LinearLayout>

        <ImageView
            android:id="@+id/contactFromCall2me"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="20dp"
            android:src="@drawable/icn_phone_gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/timeCreateTimeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginEnd="10dp"
            android:text="9 Oct"
            android:textSize="12dp"

            />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/frameChooseAccounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:orientation="vertical"
        android:paddingStart="10dp"

        android:paddingBottom="10dp">


        <TextView
            android:id="@+id/countAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="end"
            android:text="7 accounts"
            android:textSize="14dp" />

        <FrameLayout
            android:id="@+id/frame_choose_google_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/icn_fab_google" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="Choose one or several accounts"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/all_select"
                style="@style/CheckBoxStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp" />

        </FrameLayout>


        <View
            android:id="@+id/spaceMessage"
            android:layout_width="match_parent"
            android:layout_height="15dp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/listAccounts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp" />

        <FrameLayout
            android:id="@+id/frame_button_google_message"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/cancel_getMessage_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"


                android:fontFamily="sans-serif-medium"
                android:letterSpacing="-0.01"
                android:textAlignment="viewStart"
                android:textSize="14dp"
                android:textStyle="normal"

                android:text="Cancel"
                android:textColor="@color/primary"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/apply_getMessage_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="30dp"


                android:fontFamily="sans-serif-medium"
                android:letterSpacing="-0.01"
                android:textAlignment="viewStart"
                android:textSize="14dp"
                android:textStyle="normal"


                android:text="Apply"
                android:textColor="@color/primary"
                tools:ignore="RtlCompat" />
        </FrameLayout>

    </LinearLayout>






    <FrameLayout
        android:id="@+id/frameGoGmail"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:background="@drawable/frame_gmail"
        android:visibility="gone">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:src="@drawable/icn_fab_google" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="36dp"
            android:text="Gmail connect"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />


    </FrameLayout>




    <LinearLayout
        android:id="@+id/frameGetMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/gmail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:text="Emails updating please wait..."
            android:textColor="@color/black"
            android:textSize="13dp" />

    </LinearLayout>



    <FrameLayout
        android:id="@+id/frame_google_count"
        android:layout_width="16dp"
        android:layout_height="18dp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="bottom"
            android:src="@drawable/icn_fab_google" />

        <TextView
            android:id="@+id/text_count_google_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:text="2"
            android:textColor="@color/orange"
            android:textSize="7dp" />


    </FrameLayout>

    <TextView
        android:id="@+id/progressTimelineProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expecting time 98%"
        android:layout_gravity="end|bottom"
        android:textColor="@color/gray"
        android:textSize="11dp"
        android:layout_marginEnd="5dp"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        />

</FrameLayout>