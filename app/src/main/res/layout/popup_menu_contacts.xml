<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/menu_profile_share"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/selectable_item_background"
        android:clickable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/focus"
            android:tint="@color/primary"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="View mode"
            android:textSize="14dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_marginEnd="10dp"

            android:fontFamily="sans-serif-normal"
            android:layout_gravity="center_vertical"/>



    </LinearLayout>

    <View
        android:id="@+id/lineHashtahPreview"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:background="@color/sortPopupLine" />

    <LinearLayout
        android:id="@+id/menu_profile_global_search"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/selectable_item_background"
        android:clickable="true">



            <ImageView
                android:id="@+id/imageTypeClipboardGroupList"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|start"
                android:src="@drawable/list_menu"
                android:layout_marginStart="14dp"
                android:tint="@color/primary"
                android:visibility="visible" />



        <TextView
            android:id="@+id/text_list_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="18dp"
            android:text="List"
            android:textSize="14dp"
            android:textColor="@color/primary"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/check_list_mode"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/tick"
            android:layout_gravity="center_vertical"
            android:tint="@color/primary"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_profile_remind"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/selectable_item_background"
        android:clickable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_menu_ka"
            android:layout_gravity="center_vertical"
            android:tint="@color/primary"
            android:layout_marginStart="14dp"/>

        <TextView
            android:id="@+id/text_kanban_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="18dp"
            android:text="Kanban"
            android:textSize="14dp"
            android:textColor="#414141"
            android:fontFamily="sans-serif-normal"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/check_kanban_mode"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/tick"
            android:layout_gravity="center_vertical"
            android:tint="@color/primary"
            android:layout_marginStart="15dp"
            android:visibility="gone"
            android:layout_marginEnd="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_profile_copy"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/selectable_item_background"
        android:clickable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/collaboration"
            android:tint="@color/gray"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="Networking"
            android:textSize="14dp"
            android:textColor="#414141"
            android:fontFamily="sans-serif-normal"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_profile_edit"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/selectable_item_background"
        android:clickable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icn_popup_profile"
            android:layout_gravity="center_vertical"
            android:tint="@color/gray"
            android:layout_marginStart="14dp"/>

        <TextView
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="18dp"
            android:fontFamily="sans-serif-normal"
            android:text="Business cards"
            android:textColor="#414141"
            android:textSize="14dp" />

    </LinearLayout>


    <View
        android:id="@+id/lineHashtahPreview_3"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:background="@color/sortPopupLine" />

    <LinearLayout
        android:id="@+id/menu_profile_delete"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:paddingStart="10dp"
        android:orientation="horizontal"
        android:paddingEnd="6dp"
        android:clickable="true">


        <FrameLayout
            android:id="@+id/kanban_mode_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/kanban_mode_0_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:fontFamily="sans-serif-normal"
                android:textColor="@color/popup_kanban_color"
                android:textSize="15dp"
                android:text="Row"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/kanban_mode_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/kanban_mode_2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:fontFamily="sans-serif-normal"
                android:textColor="@color/popup_kanban_color"
                android:textSize="15dp"
                android:text="Card"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/kanban_mode_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/kanban_mode_1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:fontFamily="sans-serif-normal"
                android:textColor="@color/popup_kanban_color"
                android:textSize="15dp"
                android:text="Box"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/kanban_mode_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/kanban_mode_3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:fontFamily="sans-serif-normal"
                android:textColor="@color/primary"
                android:textSize="15dp"
                android:text="Extra"/>

        </FrameLayout>



        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioSHORT"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="SHORT"
                android:layout_height="wrap_content"
                android:scaleX="0.9"
                android:scaleY="0.9"

                android:textColor="#414141"
                />

            <RadioButton
                android:id="@+id/radioFULL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="FULL"
                android:layout_marginStart="20dp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:checked="true"
                android:textColor="@color/colorPrimary"
                />

        </RadioGroup>


    </LinearLayout>

    <View
        android:id="@+id/lineHashtahPreview_2"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:background="@color/sortPopupLine" />

    <LinearLayout
        android:id="@+id/menu_profile_more"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/selectable_item_background"
        android:clickable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/led_lamp"
            android:tint="@color/gray"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_weight="1"
            android:text="My availability"
            android:textSize="14dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-normal"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icn_status_online_active"
            android:tint="@color/gray"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_profile_less"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/selectable_item_background"
        android:visibility="gone"
        android:clickable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/more"
            android:tint="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_weight="1"
            android:text="More"
            android:textSize="14dp"
            android:fontFamily="sans-serif-normal"
            android:textColor="#414141"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:text="6"
                android:layout_marginBottom="-2dp"
                android:layout_gravity="center_horizontal"
                android:textSize="10dp"/>

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:src="@drawable/arr_up"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_profile_exchange"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/selectable_item_background"
        android:visibility="gone"
        android:clickable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/exchange"
            android:tint="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="Change type"
            android:textSize="14dp"
            android:fontFamily="sans-serif-normal"
            android:textColor="#414141"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_profile_open"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/selectable_item_background"
        android:visibility="gone"
        android:clickable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icn_phone"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="Open in mobile"
            android:textSize="14dp"
            android:fontFamily="sans-serif-normal"
            android:textColor="#414141"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_profile_salesforce"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/selectable_item_background"
        android:visibility="gone"
        android:clickable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/salesforce"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="Add to Salesforce"
            android:textSize="14dp"
            android:fontFamily="sans-serif-normal"
            android:textColor="#414141"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_profile_add_more"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/selectable_item_background"
        android:visibility="gone"
        android:clickable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/services"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="Add more services"
            android:textSize="14dp"
            android:fontFamily="sans-serif-normal"
            android:textColor="#414141"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>



</LinearLayout>