                    android:layout_height="wrap_content"
                    android:text="A"
                    android:maxLength="2"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textSize="9dp"/>

                <ImageView
                    android:id="@+id/google_recipient_2_1"
