<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="330dp"
    android:layout_height="170dp"
    android:background="@drawable/popup_background"
    android:orientation="horizontal"
    android:clickable="true">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/searchNameCreate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:padding="2dp"
        android:layout_weight="1"
        android:layout_marginEnd="5dp"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/sortElementsPopup"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_marginRight="1dp"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/sortTextPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="13dp"
                android:layout_marginTop="3dp"

                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="A-Z"/>

        </FrameLayout>

        <android.support.v4.widget.Space
            android:layout_width="6dp"
            android:layout_height="0dp" />

        <FrameLayout
            android:id="@+id/sortByPopupPopup"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_marginTop="5dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/populSort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:src="@drawable/icn_sort_pulse"/>

        </FrameLayout>

        <android.support.v4.widget.Space
            android:layout_width="4dp"
            android:layout_height="0dp"/>

        <FrameLayout
            android:id="@+id/sortByTimePopup"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:paddingLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="0dp"

            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/timeSortPopup"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/icn_sort_clock"/>

        </FrameLayout>



    </LinearLayout>

</LinearLayout>