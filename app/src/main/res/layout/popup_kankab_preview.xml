<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidDomInspection -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/body_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popup_background_card"
        android:clickable="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/number_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1dp"
                android:text="1"
                android:textSize="10dp" />

        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="-3dp">



            <FrameLayout
                android:id="@+id/contact_image_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/contactCircleColor"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@android:color/darker_gray" />


                <TextView
                    android:id="@+id/contactInitials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginBottom="1dp"
                    android:ellipsize="end"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:text="FS"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:visibility="visible" />

            </FrameLayout>


            <FrameLayout
                android:id="@+id/clickerPreview"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@+id/contact_image_block"
                android:visibility="gone">

            </FrameLayout>


            <ImageView
                android:id="@+id/type_image_contact"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_toStartOf="@+id/block_t"
                android:src="@drawable/star" />

            <LinearLayout
                android:id="@+id/socialContactAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type_image_contact"

                android:layout_gravity="bottom"
                android:layout_marginTop="5.5dp"
                android:layout_toEndOf="@+id/contact_image_block"
                android:orientation="horizontal"
                android:visibility="visible">


                <ImageView
                    android:id="@+id/facebook_icon_adapter"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"

                    android:src="@drawable/icn_social_facebook"

                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/twitter_icon_adapter"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"

                    android:src="@drawable/ic_twitter_64"

                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/linked_icon_adapter"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"

                    android:src="@drawable/icn_social_linkedin"

                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/instagram_icon_adapter"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"

                    android:src="@drawable/instagram_adapter"

                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/youtube_icon_adapter"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"

                    android:src="@drawable/ic_youtube_48"

                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/vk_icon_adapter"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icn_social_vk" />

                <ImageView
                    android:id="@+id/medium_icon_adapter"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="-1dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/medium_adapter" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/block_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">



                <LinearLayout
                    android:id="@+id/timeBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="8dp">

                        <TextView
                            android:id="@+id/cardTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:fontFamily="sans-serif-light"
                            android:gravity="right"
                            android:text="21:00"
                            android:textColor="@color/gray"
                            android:textSize="12dp"
                            android:textStyle="normal" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="7dp">

                        <TextView
                            android:id="@+id/is_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center_horizontal"
                            android:fontFamily="sans-serif-light"
                            android:gravity="right"
                            android:text="new"
                            android:textColor="@color/contactNewGreen"
                            android:textSize="12dp"
                            android:textStyle="normal"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/linear_card_phone_email"
                            android:layout_width="match_parent"
                            android:layout_height="17.5dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/card_phone_contact"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:visibility="visible"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_phone_card"
                                    android:layout_width="wrap_content"
                                    android:layout_height="14dp"

                                    android:layout_gravity="bottom"
                                    android:src="@drawable/icn_phone" />

                                <TextView
                                    android:id="@+id/text_phone_card"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-2dp"
                                    android:layout_toRightOf="@+id/img_phone_card"
                                    android:text="2"
                                    android:textColor="@color/orange"
                                    android:textSize="5.8sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/email_contact"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1.1"
                                android:visibility="visible"
                                android:gravity="end">

                                <ImageView
                                    android:id="@+id/img_mail_card"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="bottom"


                                    android:src="@drawable/icn_emails" />

                                <TextView
                                    android:id="@+id/text_email_card"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-2dp"
                                    android:layout_toRightOf="@+id/img_mail_card"
                                    android:text="2"
                                    android:textColor="@color/orange"
                                    android:textSize="5.8sp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>


                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/linearNameIcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contactName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif"

                android:gravity="left|bottom"
                android:maxLines="1"
                android:singleLine="true"

                android:text="John Gold"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="4dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorPrimary"
                android:maxLines="1"
                android:singleLine="true"
                android:maxWidth="115dp"

                android:textSize="14dp"
                android:text="Company sdfsdfsdfsdsdsd"/>

            <TextView
                android:id="@+id/textPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position asdasdasd"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/gray"
                android:maxLines="1"
                android:maxWidth="115dp"
                android:textSize="14dp"
                android:singleLine="true"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="3dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="18dp"
                android:ellipsize="end"
                android:layout_marginEnd="3dp"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:id="@+id/scrollHorizontal"
                    android:layout_width="wrap_content"
                    android:scrollbars="none"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/containerHashTags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="Orientation">

                    </LinearLayout>


                </HorizontalScrollView>

            </LinearLayout>



            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:src="@drawable/icn_arrow_down"
                    android:tint="@color/primary"/>

            </FrameLayout>

        </LinearLayout>


        <View
            android:id="@+id/line_card_contact_1"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="5dp"
            android:background="@color/sortPopupLine" />


        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:id="@+id/closerTabs"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.ogaclejapan.smarttablayout.SmartTabLayout
                android:id="@+id/result_tabs"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginStart="6dp"
                android:textStyle="normal"


                app:stl_clickable="true"
                app:stl_defaultTabBackground="?attr/selectableItemBackground"
                app:stl_defaultTabTextAllCaps="false"
                app:stl_defaultTabTextColor="@drawable/selector_tabs"

                app:stl_defaultTabTextHorizontalPadding="8dp"
                app:stl_defaultTabTextMinWidth="0dp"
                app:stl_defaultTabTextSize="11dp"
                app:stl_distributeEvenly="false"
                app:stl_dividerColor="#4D000000"
                app:stl_dividerThickness="0dp"
                app:stl_drawDecorationAfterTab="false"
                app:stl_indicatorAlwaysInCenter="false"
                app:stl_indicatorColor="@color/primary"
                app:stl_indicatorCornerRadius="0dp"
                app:stl_indicatorGravity="bottom"
                app:stl_indicatorInFront="false"
                app:stl_indicatorInterpolation="smart"
                app:stl_indicatorThickness="0dp"
                app:stl_indicatorWidth="50dp"
                app:stl_indicatorWithoutPadding="false"
                app:stl_overlineColor="#4D000000"
                app:stl_overlineThickness="0dp"
                app:stl_titleOffset="24dp"
                app:stl_underlineColor="#4D000000"
                app:stl_underlineThickness="0dp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </LinearLayout>

        <View
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="5dp"
            android:background="@color/sortPopupLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">



            <FrameLayout
                android:id="@+id/prifile_contact_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_circle_ripple">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:src="@drawable/icn_popup_profile" />

            </FrameLayout>

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <FrameLayout
                android:id="@+id/edit_contact_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_circle_ripple">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleX="0.72"
                    android:scaleY="0.72"
                    android:src="@drawable/icn_popup_pencil" />

            </FrameLayout>


            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <FrameLayout
                android:id="@+id/remind_contact_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_circle_ripple">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleX="0.72"
                    android:scaleY="0.72"
                    android:src="@drawable/icn_popup_remind" />

            </FrameLayout>


            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <FrameLayout
                android:id="@+id/search_note_popup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/circle_search_popup"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:src="@drawable/circle_search"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/number_search_popup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="?"
                    android:layout_marginEnd="0dp"
                    android:textColor="@color/orange"
                    android:textSize="9dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </FrameLayout>

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <FrameLayout
                android:id="@+id/share_contact_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_circle_ripple">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:src="@drawable/icn_popup_share"
                    android:tint="@color/primary"/>

            </FrameLayout>


        </LinearLayout>




    </LinearLayout>

</LinearLayout>