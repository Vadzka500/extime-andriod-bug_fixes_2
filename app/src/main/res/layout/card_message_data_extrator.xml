<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainFrame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lineInfoClip"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_gravity="start"
        android:layout_marginEnd="5dp"
        android:layout_toLeftOf="@+id/frameInageIconClipboard">

        <FrameLayout
            android:id="@+id/frameImageNum"
            android:layout_width="28dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|start"
            android:paddingLeft="5dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageTypeClipboard"
                android:layout_width="16dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical|start"
                android:src="@drawable/icn_notes" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clipboardValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="6dp"

                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:singleLine="true"
                android:text="https://www.facebook.com/call2me"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:textStyle="normal" />








        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameInageIconClipboard"
        android:layout_width="25dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="33dp">

        <ImageView
            android:id="@+id/companyPhotoIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="3dp"
            android:visibility="gone" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileIconAvatar"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="3dp"
            android:background="@android:color/transparent"
            android:visibility="gone" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileIconSearch"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/sand_clock"


            android:visibility="gone" />


        <TextView
            android:id="@+id/profileIconInitials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:maxLength="2"
            android:maxLines="1"
            android:text="F"
            android:textColor="@color/white"
            android:textSize="6dp"
            android:visibility="gone" />


    </FrameLayout>

    <RelativeLayout
        android:id="@+id/checkFrameClip"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp">



        <CheckBox
            android:id="@+id/checkClip"
            style="@style/CheckBoxStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:checked="false"
            android:clickable="false" />
    </RelativeLayout>


</RelativeLayout>

