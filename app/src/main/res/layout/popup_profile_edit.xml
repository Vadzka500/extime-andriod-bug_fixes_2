<?xml version="1.0" encoding="utf-8"?>




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="@drawable/popup_background"
        android:orientation="vertical"
        android:paddingTop="0dp"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="22dp"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="6dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_slack"/>

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_marginTop="-1dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:layout_marginEnd="14dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:layout_marginStart="11dp"
                android:orientation="horizontal"

                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/iconDataEdit"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icn_notes"
                    />

                <TextView
                    android:id="@+id/typeField"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="6dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="68dp"
                    android:fontFamily="sans-serif-normal"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginStart="8dp"
                    android:text="Read link..."/>



            </LinearLayout>

            <ImageView
                android:id="@+id/searchSocial"
                android:layout_width="36dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginTop="4dp"
                android:src="@drawable/forward_arrow"
                android:adjustViewBounds="true"
                android:tint="@color/primary"
                android:visibility="gone"
                android:layout_marginEnd="70dp"/>


            <ImageView
                android:id="@+id/imageEditSocial"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginTop="4dp"
                android:src="@drawable/icn_social_facebook"
                android:adjustViewBounds="true"
                android:visibility="visible"
                android:layout_marginEnd="34dp"/>


            <FrameLayout
                android:id="@+id/frameImageEditSocialInsta"
                android:layout_width="26.5dp"
                android:layout_height="26.5dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="30dp"
                >

                <ImageView
                    android:id="@+id/imageEditSocialInsta"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:visibility="visible"
                    android:src="@drawable/icn_social_instagram"/>

                <ImageView
                    android:src="@drawable/frame"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <ImageView
                android:id="@+id/ok_social"
                android:layout_width="25dp"
                android:layout_height="16dp"
                android:layout_marginEnd="0dp"
                android:tint="@color/gray"
                android:layout_gravity="center_vertical|end"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:src="@drawable/icn_clipboard_ok"/>

            <ImageView
                android:id="@+id/get_last_clips"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginEnd="2dp"
                android:tint="@color/primary"
                android:layout_gravity="center_vertical|end"
                android:visibility="visible"
                android:layout_marginTop="4dp"
                android:src="@drawable/clipboard_get_last"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:tint="@color/gray"
                android:layout_gravity="center_vertical|end"
                android:visibility="gone"
                android:src="@drawable/icn_clipboard_plus_card"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginStart="11.5dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="11dp"
            android:background="@color/sortPopupLine" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="8.5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="9dp"

            android:orientation="horizontal">


            <EditText
                android:id="@+id/dataToEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"

                android:background="@android:color/transparent"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
                android:text="12332123"
                android:maxHeight="50dp"
                android:minHeight="20dp"
                android:textColor="@color/statusOrange"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/ms_cursor"
                android:textSize="16dp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="15dp"
                android:src="@drawable/icn_clipboard_ok"
                android:tint="@color/gray"
                android:visibility="gone" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/icn_clipboard_plus_card"
                android:tint="@color/gray"
                android:visibility="gone" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginStart="11.5dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="11dp"
            android:background="@color/sortPopupLine" />

        <LinearLayout
            android:id="@+id/frame_edit_touch"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:paddingStart="1.5dp"
            android:paddingTop="0dp"
            android:paddingEnd="5dp">

            <FrameLayout
                android:id="@+id/cancelEditField"
                android:layout_width="80dp"
                android:layout_height="41dp"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="15dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/cancel_"
                    android:textColor="@color/primary"
                    android:textSize="12dp"
                    android:textStyle="bold" />


            </FrameLayout>

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="-2dp"
                    android:paddingEnd="2dp"
                    android:src="@drawable/icn_popup_pencil"
                    android:tint="@color/orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="@string/edit"
                    android:textColor="@color/orange"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/updateContactField"
                android:layout_width="80dp"
                android:layout_height="38.5dp"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="sans-serif"
                    android:text="@string/confirm_"
                    android:textColor="@color/primary"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>






