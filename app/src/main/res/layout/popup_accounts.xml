<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popupAccounts"
    android:layout_width="match_parent"
    android:layout_height="255dp"

    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_dark"
        android:textSize="9dp"
        android:gravity="center_horizontal"
        android:text="Extime helps you to organize messages history with contacts, just connect services"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:background="@drawable/popup_background"
        android:paddingStart="11dp">

        <FrameLayout
            android:id="@+id/frameCloseAccount"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="5dp">

            <FrameLayout
                android:layout_width="22dp"
                android:layout_height="3dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_slack"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:clickable="true"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:src="@drawable/icn_fab_google" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:text="Select account"
                    android:textColor="@color/orange"
                    android:visibility="gone"
                    android:textSize="16dp" />



                <TextView
                    android:id="@+id/count_acc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 account"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd = "10dp"
                    android:visibility="gone"
                    />



                <CheckBox
                    android:id="@+id/all_accounts_select"
                    style="@style/CheckBoxStyleSmall"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:visibility="gone"
                    android:checked="false"/>


                <FrameLayout
                    android:layout_width="25dp"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:visibility="visible"
                            android:src="@drawable/icn_fab_google" />


                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Gmail"
                        android:textColor="@color/black"
                        android:textSize="7dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/primary" />

            </LinearLayout>

                    <TextView
                        android:id="@+id/count_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="9dp"
                        android:layout_gravity="end"
                        android:textColor="@color/orange"/>

                </FrameLayout>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:visibility="visible"
                            android:src="@drawable/icn_social_linkedin"
                            android:tint="@color/gray"
                            />


                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="7dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:text="LinkedIn"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="invisible"
                        android:background="@color/primary" />

                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:visibility="visible"
                            android:src="@drawable/icn_social_facebook"
                            android:tint="@color/gray"/>


                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="7dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:text="Facebook"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="invisible"
                        android:background="@color/primary" />

                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:visibility="visible"
                            android:src="@drawable/slack"
                            android:tint="@color/gray"/>


                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="7dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:text="Slack"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="invisible"
                        android:background="@color/primary" />

                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:visibility="visible"
                            android:src="@drawable/telegram_gray_2"
                            />


                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="7dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:text="Telegram"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="invisible"
                        android:background="@color/primary" />

                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        >


                        <CheckBox
                            android:id="@+id/all_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"

                            style="@style/CheckBoxStyleSmall"/>

                    </FrameLayout>



                </LinearLayout>


            </LinearLayout>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="11dp"
            android:visibility="gone"
            android:background="@color/sortPopupLine" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottomFrameAccounts"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:fadeScrollbars="false"
                android:scrollbars="vertical"


                >

            </android.support.v7.widget.RecyclerView>


            <FrameLayout
                android:id="@+id/bottomFrameAccounts"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginStart="0dp"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:layout_marginEnd="11dp">

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical|start"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/cancel_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="CANCEL"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="-0.01"
                        android:textAlignment="viewStart"
                        android:textSize="14dp"
                        android:textStyle="normal"
                        android:textColor="@color/primary"

                        tools:ignore="RtlCompat" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/connect_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="CONNECT"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="-0.01"
                        android:textAlignment="viewStart"
                        android:textSize="14dp"
                        android:textStyle="normal"
                        android:textColor="@color/gray"

                        tools:ignore="RtlCompat" />

                </LinearLayout>




                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical|end"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/apply_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="9dp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="-0.01"
                        android:text="APPLY"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/gray"
                        android:textSize="14dp"
                        android:textStyle="normal"
                        tools:ignore="RtlCompat" />

                </LinearLayout>

            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>


</FrameLayout>