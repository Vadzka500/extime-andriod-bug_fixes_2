<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/popup_background"
    android:paddingTop="0dp">

    <FrameLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/typeField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_gravity="top"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/primary_dark"
            android:visibility="gone"
            android:text="@string/phone"/>



        <EditText
            android:id="@+id/dataToEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:maxHeight="60dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="120dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="16dp"
            android:textStyle="normal"
            android:text="add Link, username or search"/>


        <ImageView
            android:id="@+id/searchSocial"
            android:layout_width="36dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginTop="4dp"
            android:src="@drawable/forward_arrow"
            android:adjustViewBounds="true"
            android:tint="@color/primary"
            android:visibility="visible"
            android:layout_marginEnd="70dp"/>


        <ImageView
            android:id="@+id/imageEditSocial"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginTop="4dp"
            android:src="@drawable/icn_fab_google"
            android:adjustViewBounds="true"
            android:visibility="visible"
            android:layout_marginEnd="34dp"/>






        <ImageView
            android:id="@+id/get_last_clips"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginEnd="2dp"
            android:tint="@color/primary"
            android:layout_gravity="center_vertical|end"
            android:visibility="visible"
            android:layout_marginTop="4dp"
            android:src="@drawable/clipboard_get_last"/>



    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@color/sortPopupLine" />

    <LinearLayout
        android:paddingTop="0dp"
        android:layout_width="match_parent"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/cancelEditField"
            android:layout_width="80dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_height="38.5dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_gravity="center_vertical|start"
                android:fontFamily="sans-serif"
                android:text="@string/cancel_"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:textStyle="bold" />


        </FrameLayout>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageTypeData"
                android:layout_gravity="center_vertical"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:paddingEnd="2dp"
                android:paddingTop="-2dp"
                android:src="@drawable/icn_companies"
                android:tint="@color/primary" />

            <TextView
                android:id="@+id/textNameData"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/edit"
                android:textColor="@color/orange"
                android:textSize="14dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold" />

        </LinearLayout>



        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/updateContactField"
            android:layout_width="80dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_height="38.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:fontFamily="sans-serif"
                android:text="@string/confirm_"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:textStyle="bold" />

        </FrameLayout>



    </LinearLayout>

</LinearLayout>