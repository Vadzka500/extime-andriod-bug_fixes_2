                android:layout_marginLeft="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/icn_remind_call" />

            <ImageView
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/icn_remind_message" />

            <ImageView
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/icn_remind_conference" />

            <ImageView
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/icn_remind_meeting" />

            <ImageView
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/icn_remind_breakfast" />

            <ImageView
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/icn_remind_lunch" />

            <ImageView
                android:paddingStart="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:adjustViewBounds="true"
                android:src="@drawable/icn_plus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:paddingLeft="11dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_time"
                android:textSize="14dp"
                android:textColor="@color/colorPrimaryDark"/>

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            
            <LinearLayout
                android:layout_width="215dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/gray"
                    android:text="@string/test_set_time"/>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:text="@string/test_set_time_in"
                    android:textColor="@color/gray"/>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:paddingStart="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icn_remind_bell" />

                <TextView
                    android:layout_marginStart="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:text="@string/test_10m"
                    android:textColor="@color/gray"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="11dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/comment"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:textColor="@color/colorPrimaryDark"/>

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="215dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:hint="@string/test_discuss_the_project"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:layout_marginStart="-5dp"
                    app:backgroundTint="@color/gray"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textStyle="normal" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:paddingStart="3dp"
                    android:src="@drawable/icn_geo" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icn_arrow_down"
                    android:tint="@color/colorPrimary" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="11.5dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="11dp"

            android:background="@color/sortPopupLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="11dp"
            android:paddingRight="10dp"
            android:paddingTop="7dp">

            <FrameLayout
                android:id="@+id/remind_cancel"
                android:layout_width="90dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:layout_height="30dp">

                <TextView
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/cancel_"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </FrameLayout>



            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <ImageView
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:paddingTop="2dp"
                android:layout_height="14dp"
                android:tint="@color/orange"
                android:paddingEnd="2dp"
                android:src="@drawable/icn_popup_remind"/>

            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:text="@string/remind_"/>

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <FrameLayout
                android:layout_width="90dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:layout_height="30dp">

                <TextView
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/confirm_"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>