<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="137dp"
    android:background="@drawable/popup_background"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:clickable="true"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/popup_contacts_data"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">




        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleCompanyPopup"
            android:layout_width="160dp"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclePositionPopup"
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                <FrameLayout
                    android:id="@+id/sortElementsPopup"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:layout_marginRight="1dp"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/sortTextPopup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textSize="13dp"
                        android:layout_marginTop="3dp"

                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:text="A-Z"/>

                </FrameLayout>

                <android.support.v4.widget.Space
                    android:layout_width="6dp"
                    android:layout_height="0dp" />

                <FrameLayout
                    android:id="@+id/sortByPopupPopup"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:layout_marginTop="5dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/populSort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:src="@drawable/icn_sort_pulse"/>

                </FrameLayout>

                <android.support.v4.widget.Space
                    android:layout_width="4dp"
                    android:layout_height="0dp"/>

                <FrameLayout
                    android:id="@+id/sortByTimePopup"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:paddingLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="0dp"

                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/timeSortPopup"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/icn_sort_clock"/>

                </FrameLayout>



        </LinearLayout>



    </LinearLayout>

   <TextView
       android:id="@+id/showMore"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Show more"
       android:textStyle="bold"
       android:textColor="@color/primary"
       android:layout_alignParentBottom="true"
       android:visibility="gone"/>


</RelativeLayout>

