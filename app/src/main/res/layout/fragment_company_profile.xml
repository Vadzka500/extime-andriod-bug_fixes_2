<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/close_popups"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/profile_preview_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingTop="15dp"

            android:paddingBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/profileAvatar"
                    android:layout_width="64dp"
                    android:layout_height="64dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profilePopupAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:id="@+id/companyPopupAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />

                    <TextView
                        android:id="@+id/profilePopupInitials"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:maxLength="2"
                        android:maxLines="1"
                        android:text="F"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/data_block"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:scrollbars="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="6dp"
                            android:layout_toLeftOf="@+id/linearIc">

                            <LinearLayout
                                android:id="@+id/linearName"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:visibility="visible"
                                android:layout_marginTop="-2dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_gravity="start"
                                    android:layout_marginTop="0dp"
                                    android:layout_weight="1"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:fontFamily="sans-serif"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:maxLines="1"
                                    android:scrollHorizontally="true"
                                    android:singleLine="true"
                                    android:text="dlskaf sdajfjasdklfj sakdfj sidf jsoadfj saodfh sdhf isdhf sidhf isuadhf iusadf sadf "
                                    android:textColor="@android:color/black"
                                    android:textSize="14.5dp"
                                    android:textStyle="normal" />


                            </LinearLayout>

                            <EditText
                                android:id="@+id/editNameProflie"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_alignParentLeft="true"
                                android:layout_gravity="start"
                                android:layout_marginTop="-2.3dp"
                                android:ellipsize="end"
                                android:fontFamily="sans-serif"
                                android:inputType="textCapWords"
                                android:maxLines="1"
                                android:paddingTop="2dp"
                                android:paddingEnd="4dp"
                                android:layout_marginStart="-4dp"
                                android:paddingBottom="0dp"
                                android:text="@string/test_name"
                                android:textColor="@color/black"
                                android:textSize="14.5dp"
                                android:textStyle="normal"
                                android:visibility="gone"

                                app:backgroundTint="@color/white" />


                            <View
                                android:id="@+id/lineNameProfile"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="3dp"
                                android:background="@color/ltgray" />

                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/linearIc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="end"
                            android:layout_marginRight="-11dp"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/emailImg"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="26dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/icn_bottombar_emails"
                                android:visibility="visible" />

                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/profilePerson"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="-1dp"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <TextView
                            android:id="@+id/company_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-light"
                            android:maxEms="6"
                            android:singleLine="true"
                            android:text="@string/company"
                            android:textColor="@color/darkAzure"
                            android:textSize="13.5dp"
                            android:textStyle="normal"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/company_title_edit"
                            android:layout_width="100dp"
                            android:layout_height="19dp"
                            android:layout_gravity="start"
                            android:layout_marginEnd="10dp"
                            android:background="@android:color/white"
                            android:fontFamily="sans-serif-light"
                            android:hint="@string/company"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/darkAzure"
                            android:textColorHighlight="@color/colorPrimary"
                            android:textSize="13.5dp"
                            android:textStyle="normal"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/company_title"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-light"
                            android:maxEms="6"
                            android:singleLine="true"
                            android:text="@string/test_position"
                            android:textColor="@color/gray"
                            android:textSize="13.5dp"
                            android:textStyle="normal"

                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/company_edit"
                            android:layout_width="105dp"
                            android:layout_height="19dp"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="start"
                            android:layout_marginRight="42dp"
                            android:background="@android:color/white"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-light"
                            android:hint="@string/test_position"
                            android:maxWidth="100dp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/gray"
                            android:textSize="13.5dp"
                            android:textStyle="normal"
                            android:visibility="gone" />

                        <android.support.v4.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/profile_company"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="-1dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/webImgCompany"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="4dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/icn_popup_web"
                            android:visibility="visible" />


                        <TextView
                            android:id="@+id/web_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginEnd="20dp"
                            android:layout_toRightOf="@+id/webImgCompany"
                            android:clickable="true"
                            android:ellipsize="end"

                            android:fontFamily="sans-serif-light"
                            android:singleLine="true"


                            android:text="sdlfmsa sadkfasml sdasdf safasdfsafasdfasdf"
                            android:textColor="@color/primary_dark"
                            android:textSize="14dp"
                            android:textStyle="normal"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/web_title_edit"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:layout_gravity="start"
                            android:layout_marginEnd="100dp"
                            android:layout_toRightOf="@+id/webImgCompany"
                            android:background="@android:color/white"
                            android:fontFamily="sans-serif-light"
                            android:hint="web"
                            android:maxLines="1"
                            android:singleLine="true"

                            android:textColor="@color/primary_dark"
                            android:textSize="14dp"
                            android:textStyle="normal"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/lineCompanyProfileWeb"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="100dp"
                        android:background="@color/sortPopupLine" />

                    <View
                        android:id="@+id/lineCompanyProfile"
                        android:layout_width="100dp"
                        android:layout_height="0.8dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="0dp"
                        android:background="@color/sortPopupLine" />

                    <View
                        android:id="@+id/positionVileEditPreview"
                        android:layout_width="105dp"
                        android:layout_height="0.8dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="-1dp"
                        android:layout_marginRight="40dp"
                        android:background="@color/sortPopupLine" />

                    <android.support.v4.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0.3dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/hashtagsLL"
                            android:layout_width="230dp"
                            android:layout_height="18dp"

                            android:ellipsize="end"
                            android:orientation="horizontal">

                            <HorizontalScrollView
                                android:id="@+id/scrollHorizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:id="@+id/containerHashTags"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:ignore="Orientation">

                                </LinearLayout>

                            </HorizontalScrollView>

                        </LinearLayout>

                        <EditText
                            android:id="@+id/hashTagsEdit"
                            android:layout_width="match_parent"
                            android:layout_height="17dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="15dp"
                            android:hint="hashtags"
                            android:orientation="horizontal"
                            android:padding="0dp"
                            android:textColor="@color/primary"
                            android:textSize="14dp"
                            android:visibility="gone" />

                        <android.support.v4.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <View
                        android:id="@+id/lineHashProfile"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="-1dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="4dp"
                        android:background="@color/ltgray" />

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lineaSocials"
                    android:layout_width="wrap_content"
                    android:layout_height="21.5dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp">


                    <ImageView
                        android:id="@+id/vk_icon"
                        android:layout_width="21.5dp"
                        android:layout_height="21.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:adjustViewBounds="true"
                        />

                    <ImageView
                        android:id="@+id/link_icon"
                        android:layout_width="21.5dp"
                        android:layout_height="21.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:adjustViewBounds="true"
                        />


                    <FrameLayout

                        android:layout_width="27.8dp"
                        android:layout_height="27.8dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="-3.2dp">

                        <ImageView
                            android:id="@+id/inst_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="3dp"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />

                    </FrameLayout>

                </LinearLayout>


                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.05" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="21.5dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/viber_icon"
                        android:layout_width="21.5dp"
                        android:layout_height="21.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/ic_launcher_round" />


                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/whatsapp_icon"
                        android:layout_width="21.5dp"
                        android:layout_height="21.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/ic_launcher_round" />

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/telegram_icon"
                        android:layout_width="21.5dp"
                        android:layout_height="21.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/ic_launcher_round" />


                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/skype_icon"
                        android:layout_width="21.5dp"
                        android:layout_height="21.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:src="@mipmap/ic_launcher_round" />


                    <FrameLayout
                        android:id="@+id/socialsArrowDown"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:adjustViewBounds="true">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleX="0.5"
                            android:scaleY="0.5"

                            android:src="@drawable/icn_arrow_down"
                            android:tint="@color/colorPrimary" />

                    </FrameLayout>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/closerTabs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="9dp"
            android:orientation="vertical">

            <com.ogaclejapan.smarttablayout.SmartTabLayout
                android:id="@+id/result_tabs"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:textStyle="normal"
                app:stl_clickable="true"
                app:stl_defaultTabBackground="?attr/selectableItemBackground"
                app:stl_defaultTabTextAllCaps="false"
                app:stl_defaultTabTextColor="@color/primary"
                app:stl_defaultTabTextHorizontalPadding="10dp"
                app:stl_defaultTabTextMinWidth="0dp"
                app:stl_defaultTabTextSize="12.8dp"
                app:stl_distributeEvenly="true"
                app:stl_dividerColor="#4D000000"
                app:stl_dividerThickness="0dp"
                app:stl_drawDecorationAfterTab="false"
                app:stl_indicatorAlwaysInCenter="false"
                app:stl_indicatorColor="@color/primary"
                app:stl_indicatorCornerRadius="0dp"
                app:stl_indicatorGravity="bottom"
                app:stl_indicatorInFront="false"
                app:stl_indicatorInterpolation="smart"
                app:stl_indicatorThickness="2dp"
                app:stl_indicatorWidth="50dp"
                app:stl_indicatorWithoutPadding="false"
                app:stl_overlineColor="#4D000000"
                app:stl_overlineThickness="0dp"
                app:stl_titleOffset="24dp"
                app:stl_underlineColor="#4D000000"
                app:stl_underlineThickness="0dp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/company_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingBottom="10dp" />

            <FrameLayout
                android:id="@+id/closer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/updateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="20dp"
        android:text="Updating..."
        android:textColor="@color/md_green_500"
        android:textSize="16.5dp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/popupPreviewEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:visibility="gone">

        <include layout="@layout/popup_profile_edit_preview" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/popupEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:visibility="gone">

        <include layout="@layout/popup_profile_edit" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/company_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:visibility="gone">

        <include
            android:id="@+id/company_popup_for_margin"
            layout="@layout/popup_company_preview" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/arrowShowHashtags2"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginTop="63dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/icn_arrow_down"
            android:tint="@color/colorPrimary" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/popupProfileHashtags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:visibility="gone">

        <include layout="@layout/popup_user_hashtags" />
    </FrameLayout>





    <FrameLayout
        android:id="@+id/popupMessage"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:background="@drawable/popup_background"
        android:layout_marginTop="145dp"
        android:visibility="gone">

        <include layout="@layout/popup_message" />
    </FrameLayout>


</FrameLayout>
