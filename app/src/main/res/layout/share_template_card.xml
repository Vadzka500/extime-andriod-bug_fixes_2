<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="84dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frameIcon"
        android:layout_width="55dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginEnd="4dp"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/accountAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal|center_vertical"

            android:src="@drawable/circle_256"

            />



        <ImageView
            android:id="@+id/iconReply"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/icn_remind_message"/>

        <TextView
            android:id="@+id/accountInitials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"

            android:ellipsize="end"
            android:maxLength="2"
            android:maxLines="1"
            android:text="F"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="visible" />


    </FrameLayout>


    <TextView
        android:id="@+id/name_tamplate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2.5dp"

        android:gravity="center_horizontal"
        android:text="Gmail"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="@color/gray_textView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"/>

</LinearLayout>