<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="151dp"
    android:orientation="vertical">




    <LinearLayout
        android:id="@+id/body_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popup_background_card"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/number_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1dp"
                android:text="1"

                android:textSize="8dp" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal"

            >

            <FrameLayout
                android:layout_width="18dp"
                android:layout_height="18dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileIconAvatar"
                android:layout_width="18dp"
                android:layout_height="18dp"

                android:background="@android:color/transparent"
                android:visibility="visible" />


            <TextView
                android:id="@+id/profileIconInitials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:maxLength="2"
                android:maxLines="1"
                android:text="F"
                android:textColor="@color/white"
                android:textSize="9dp"
                android:visibility="visible" />

            </FrameLayout>

            <HorizontalScrollView
                android:id="@+id/scrollName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                >

            <TextView
                android:id="@+id/contactName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:layout_gravity="center_vertical"
                android:maxLines="1"


                android:text="John Gold sdfg kds;gm dkmgkdsmg dskg "
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="normal" />

            </HorizontalScrollView>



            <ImageView
                android:id="@+id/replyMeny"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/reply"
                android:tint="@color/primary"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="0dp"/>




            <ImageView
                android:id="@+id/menu_fragment_message"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/more"
                android:tint="@color/primary"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="center_vertical"
                android:rotation="90"/>


        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:id="@+id/scrollName_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                >


            <TextView
                android:id="@+id/subject_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="left|bottom"
                android:maxLines="1"
                android:text="John Gold"


                android:textSize="12dp"
                android:textStyle="normal" />


            </HorizontalScrollView>

            <ImageView
                android:id="@+id/favoriteMessageCard"
                android:layout_width="14dp"
                android:layout_height="14dp"


                android:layout_marginEnd="4dp"
                android:src="@drawable/star" />

            <ImageView
                android:id="@+id/favoriteMessageCardEmpty"
                android:layout_width="14dp"
                android:layout_height="14dp"

                android:layout_marginEnd="5dp"
                android:tint="@color/gray"
                android:src="@drawable/star_empty" />


            <TextView
                android:id="@+id/cardTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"


                android:fontFamily="sans-serif"
                android:gravity="right"
                android:text="21:00"
                android:textColor="@color/gray"
                android:textSize="10dp"
                android:textStyle="normal" />


        </LinearLayout>


        <View
            android:id="@+id/line_card_contact_1"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:background="@color/sortPopupLine" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="9dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="8dp"


            >


            <ScrollView
                android:id="@+id/scrollText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/frame_open_popup_message"
                android:scrollbars="none">

            <TextView
                android:id="@+id/textMessage"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:scrollbars="vertical"
                android:textIsSelectable="true"

                android:textColorLink="@color/colorPrimaryDark"
                android:textColorHighlight="@color/colorPrimary"
                android:layout_height="match_parent" />

            </ScrollView>

            <FrameLayout
                android:id="@+id/clicker_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:id="@+id/frame_open_popup_message"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom">






                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />



                <ImageView
                    android:id="@+id/file_first"
                    android:layout_width="15dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center_vertical"

                    android:src="@drawable/png_icon"/>



                <FrameLayout
                    android:id="@+id/files_count"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="16dp"
                        android:layout_height="18dp"
                        android:background="@drawable/border_rect" />

                    <TextView
                        android:id="@+id/f_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:fontFamily="sans-serif"
                        android:text="8"
                        android:textColor="@color/orange"
                        android:textSize="12dp" />


                </FrameLayout>



            </LinearLayout>

        </RelativeLayout>




    </LinearLayout>







</LinearLayout>