<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/popup_mess_"
    android:layout_height="275dp"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingTop="8dp"
    android:paddingEnd="12dp"
    android:background="@drawable/popup_background"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/ms_cursor"
            android:textStyle="bold"
            android:layout_marginTop="0.5dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:hint="Type template's name or use automatically"

            android:textSize="14dp"
            android:textColor="@android:color/black"
            android:layout_height="20dp"/>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:background="@color/sortPopupLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="18dp"
            android:layout_height="18dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar_sender"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/circle_gray_3"/>

            <TextView
                android:id="@+id/initial_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:maxLength="2"
                android:textColor="@color/white"
                android:visibility="gone"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textSize="9dp"/>

            <ImageView
                android:id="@+id/google_sender"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/icn_fab_google"
                android:visibility="gone"
                android:layout_gravity="end|bottom"/>

        </FrameLayout>

        <TextView
            android:id="@+id/recEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Surname"
            android:textSize="13dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/primary"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/recipient_email_edit"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:maxLines="1"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
            android:textStyle="normal"
            android:textCursorDrawable="@drawable/ms_cursor"
            android:textSize="13dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/gray_textView"
            android:singleLine="true"
            android:layout_weight="1"/>







    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginTop="-0.5dp"
            android:text="Sub:"/>

        <EditText
            android:id="@+id/subject_email_edit"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:maxLines="1"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:hint="Email subject"
            android:textStyle="normal"
            android:textSize="13dp"
            android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
            android:textCursorDrawable="@drawable/ms_cursor"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:layout_weight="1"/>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:background="@color/sortPopupLine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/frameTextMess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/block_image_2"
        android:orientation="vertical"
        android:layout_marginTop="3dp">

        <EditText
            android:id="@+id/textMessage_edit"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:background="@android:color/transparent"
            android:lineSpacingExtra="1.745dp"
            android:layout_marginEnd="8dp"
            android:textColorLink="@color/colorPrimaryDark"
            android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"

            android:textColorHighlight="@color/colorPrimary"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/textMessage_edit_user"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:background="@android:color/transparent"

            android:layout_marginEnd="8dp"
            android:textColorLink="@color/colorPrimaryDark"
            android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
            android:visibility="gone"
            android:textColorHighlight="@color/colorPrimary"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/linkMessageReply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" asd asd asd asd asd asd asd "
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:textSize="14dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/primary"/>


    </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/block_image_2"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:paddingStart="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/type_bold_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:textStyle="italic"
                android:textColor="@color/primary"
                android:textSize="13dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/type_italic_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I"
                android:textStyle="italic"
                android:textColor="@color/primary"
                android:layout_marginTop="1dp"
                android:textSize="13dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/type_u_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="U"
                android:textStyle="normal"
                android:layout_marginTop="1dp"
                android:textColor="@color/primary"
                android:textSize="13dp"
                android:layout_gravity="center_horizontal"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <FrameLayout
                android:id="@+id/selectFilePopupTemplate"
                android:layout_width="20dp"
                android:layout_height="20dp">

            <ImageView
                android:id="@+id/selectFilePopupTemplateEdit"
                android:layout_width="14dp"
                android:layout_height="14dp"

                android:layout_gravity="center_horizontal|bottom"
                android:tint="@color/primary"
                android:src="@drawable/paperclip"/>

            </FrameLayout>



        </LinearLayout>

    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/text_no_files_popup"
            android:layout_width="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="4dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="No data attachments yet"
            android:textColor="@color/gray"
            android:fontFamily="sans-serif-light"
            android:textSize="11dp"
            android:layout_gravity="end"
            android:layout_height="wrap_content"/>


    </FrameLayout>




    <FrameLayout
        android:id="@+id/linearCountDataMEssage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/linear_arg_"
            android:layout_width="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:scrollbars="horizontal">

        </android.support.v7.widget.RecyclerView>




        <FrameLayout
            android:id="@+id/frameArrMoreMessageData"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="3dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arr_down"/>
        </FrameLayout>
    </FrameLayout>







    <View
        android:id="@+id/line_button"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="2dp"
        android:background="@color/sortPopupLine" />

    <LinearLayout
        android:id="@+id/frame_edit_touch"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingStart="1.5dp"
        android:layout_marginTop="2dp"
        android:paddingEnd="5dp">

        <FrameLayout
            android:id="@+id/cancelEditField"
            android:layout_width="70dp"
            android:layout_height="41dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif"
                android:text="@string/cancel_"
                android:textColor="@color/primary"
                android:textSize="12dp"
                android:textStyle="bold" />


        </FrameLayout>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:paddingTop="-2dp"
                android:paddingEnd="2dp"
                android:src="@drawable/icn_popup_pencil"
                android:tint="@color/orange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:text="@string/edit"
                android:textColor="@color/orange"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>


        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/updateContactField"
            android:layout_width="70dp"
            android:layout_height="38.5dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                android:text="@string/confirm_"
                android:textColor="@color/primary"
                android:textSize="12dp"
                android:textStyle="bold" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/test1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_marginTop="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icn_extract_social"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detector"
                android:layout_gravity="center_vertical"
                android:textSize="13dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/orange"/>

            <TextView
                android:id="@+id/textCountMessageData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:textSize="11dp"
                android:text="14 items: 3 contacts, 1 meeting, 6 files"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_weight="1"/>




            <ImageView
                android:id="@+id/downloadMessageData"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/download"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                android:tint="@color/primary"/>

            <ImageView
                android:id="@+id/copyMessageData"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icn_profile_edit_copy"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                android:tint="@color/primary"/>

            <ImageView
                android:id="@+id/shareMessageData"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icn_popup_share"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:visibility="gone"
                android:tint="@color/primary"/>

            <ImageView
                android:id="@+id/hideMoreMessageData"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="5dp"

                android:src="@drawable/arr_up"/>

        </LinearLayout>

        <View
            android:id="@+id/line_button_2"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="9dp"
            android:background="@color/sortPopupLine" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerDataMessage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="-2dp"
            android:layout_marginEnd="-9dp"
            android:layout_weight=" 1">

        </android.support.v7.widget.RecyclerView>

        <FrameLayout
            android:id="@+id/bottomFrameMessage"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp">

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|start"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/mergeMessageData"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="-0.01"
                    android:text="CANCEL"
                    android:textAlignment="viewStart"
                    android:textColor="@color/primary"
                    android:textSize="14dp"

                    android:textStyle="normal"

                    tools:ignore="RtlCompat" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/updateContactMessageData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginRight="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="-0.01"
                    android:text="@string/update1"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="14dp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/createContactMessageDataLayout"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|end"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/createContactMessageData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="9dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="-0.01"
                    android:text="@string/create"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/gray"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

        </FrameLayout>


    </LinearLayout>

</LinearLayout>