<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingRight="8dp"
    android:paddingTop="5dp">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:paddingBottom="11dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:paddingTop="11dp"
        android:src="@drawable/icn_ms_console" />


    <TextView
        android:id="@+id/textPush"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textColor="@color/primary"
        android:singleLine="true"
        android:text="Say voice command and push button"

        android:textSize="13dp"
        android:gravity="center_vertical"/>

    <FrameLayout
        android:id="@+id/new_voice"
        android:layout_width="23dp"
        android:layout_height="match_parent">

    <ImageView

        android:layout_width="11.5dp"
        android:layout_height="11.5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/icn_ms_close"
        android:layout_gravity="center_vertical"/>

    </FrameLayout>


    <TextView
        android:id="@+id/ok_voice"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:text="OK"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:textSize="16dp"
        android:gravity="center_vertical|center_horizontal"/>


</LinearLayout>